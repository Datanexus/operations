#!/usr/bin/env ansible-playbook
# (c) 2019 DataNexus Inc.  All Rights Reserved.
#
#
---
- name: CONFLUENT CONNECTOR OVERLAY | discovering all connect nodes
  hosts: localhost
  tasks:
    - ec2_instance_facts:
        region: "{{ region }}"
        filters:
          instance-state-name: running
          "tag:Application": kafka_connect
          "tag:Domain": "{{ domain }}"
          "tag:Project": "{{ project }}"
          "tag:Tenant": "{{ tenant }}"
      register: connect_instances
      when:
        - groups['kafka_connect'] is not defined
        - cloud == 'aws'
        
    - name: CONFLUENT CONNECTOR OVERLAY | building kafka connect host group
      add_host: hostname="{{ item }}" groupname=kafka_connect ansible_ssh_private_key_file="{{ key_path }}/{{ cloud }}-{{ region }}-{{ project }}-{{ broker.application }}-{{ domain }}-private-key.pem"
      with_items: "{{ connect_instances.instances | map(attribute='private_ip_address') | list }}"
      when:
        - connect_instances.instances is defined
        - connect_instances.instances | length > 0
    
    - ec2_instance_facts:
        region: "{{ region }}"
        filters:
          instance-state-name: running
          "tag:Application": elasticsearch
          "tag:Domain": "{{ domain }}"
          "tag:Project": "{{ project }}"
          "tag:Tenant": "{{ tenant }}"
      register: elasticsearch_instances
      when:
        - groups['elasticsearch'] is not defined
        - cloud == 'aws'
    
    - name: CONFLUENT CONNECTOR OVERLAY | building elasticsearch host group
      add_host: hostname="{{ item }}" groupname=elasticsearch ansible_ssh_private_key_file="{{ key_path }}/{{ cloud }}-{{ region }}-{{ project }}-{{ broker.application }}-{{ domain }}-private-key.pem"
      with_items: "{{ elasticsearch_instances.instances|map(attribute='private_ip_address')|list }}"
      when:
        - elasticsearch_instances.instances is defined
        - elasticsearch_instances.instances | length > 0

# this is necessary before we build host groups from the ansible server
- name: KAFKA CONNECTOR OVERLAY | discovering source broker facts
  hosts: broker_source
  tasks:
    - setup:

# this is necessary before we build host groups from the ansible server
- name: KAFKA CONNECTOR OVERLAY | discovering elasticsearch facts
  hosts: broker_destination
  tasks:
    - setup:

- name: KAFKA CONNECTOR OVERLAY | building source and destination broker public internal host groups
  hosts: localhost
  gather_facts: no
  tasks:
    - name: KAFKA CONNECTOR OVERLAY | building broker source public internal host group
      add_host: hostname="{{ hostvars[item].ansible_default_ipv4.address }}" groupname=broker_source_public
      with_items: "{{ groups['broker_source'] }}"
      when: "'broker_source' in groups | default([])"
      
    - name: KAFKA CONNECTOR OVERLAY | building broker destination public internal host group
      add_host: hostname="{{ hostvars[item].ansible_default_ipv4.address }}" groupname=broker_destination_public
      with_items: "{{ groups['broker_destination'] }}"
      when: "'broker_destination' in groups | default([])"
      
# this is necessary before we build host groups from the ansible server
- name: KAFKA CONNECTOR OVERLAY | discovering elasticsearch facts
  hosts: elasticsearch
  tasks:
    - setup:

- name: CONFLUENT CONNECTOR OVERLAY | building elasticsearch public internal host group
  hosts: localhost
  gather_facts: no
  tasks:
    - name: CONFLUENT OVERLAY | building elasticsearch public internal host group
      add_host: hostname="{{ hostvars[item].ansible_default_ipv4.address }}" groupname=elasticsearch_public
      with_items: "{{ groups['elasticsearch'] }}"
      when: "'elasticsearch' in groups | default([])"

# this is necessary before we build host groups from the ansible server
- name: CONFLUENT CONNECTOR OVERLAY | discovering connect facts
  hosts: kafka_connect
  tasks:
    - setup:

- name: CONFLUENT CONNECTOR OVERLAY | building elasticsearch public internal host group
  hosts: localhost
  gather_facts: no
  tasks:
    - name: CONFLUENT OVERLAY | building elasticsearch public internal host group
      add_host: hostname="{{ hostvars[item].ansible_default_ipv4.address }}" groupname=connect_public
      with_items: "{{ groups['kafka_connect'] }}"
      when: "'kafka_connect' in groups | default([])"

# since we run distributed connectors, we only need register on a single host
- name: CONFLUENT CONNECTOR OVERLAY | configuring connectors
  hosts: kafka_connect[0]
  vars_files:
    - "{{ tenant_config_path }}/config/applications/kafka.yml"
    - "{{ tenant_config_path }}/config/applications/connect.yml"
  gather_facts: yes
  tasks:
    - import_role:
        name: connect